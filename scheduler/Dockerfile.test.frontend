# Dockerfile for frontend tests
FROM node:16-alpine

WORKDIR /app/frontend

# Install frontend dependencies
COPY frontend/package*.json ./
RUN npm ci --silent

# Copy frontend code
COPY frontend/ .

# Set CI environment
ENV CI=true
ENV REACT_APP_API_URL=http://localhost:20001

# Default command runs frontend tests
CMD ["npm", "run", "test:ci"]

